<%= form_for @user do|f| %>
 
  <% if @user.errors.any? %>
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <%end%>
  
<p>
<%= f.label :name%><br>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :gender %><br>
<%= f.text_field :gender %>
</p>
<p>
<%= f.label :age %><br>
<%= f.text_field :age %>
</p>
<p>
<%= f.label :email %><br>
<%= f.text_field :email %>
</p>
<p>
<%= f.label :present_address %><br>
<%= f.text_field :present_address %>
</p>
<p>
<%= f.label :address %><br>
<%= f.text_field :address %>
</p>
<p>
<%= f.label :phone_no %><br>
<%= f.text_field :phone_no %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>
