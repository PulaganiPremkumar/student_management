<%= link_to 'New employee', new_employee_path %>

<%= form_tag employees_path, method: :get do %>
  <%= text_field_tag :role_name, params[:role_name], placeholder: "Search by Role Name" %>
  <%= submit_tag "Search" %>
<% end %>
<% if @employees.present? %>

	<table border="2">
	<tr>
		<th>name</th>
		<th>email</th>
		<th>gender</th>
		<th>contact_no</th>
		<th>roles</th>
		<th colspan="3"></th>
	</tr>

	<% @employees.each do |employee| %>
	<tr>
	<td><%= employee.name %></td>
	<td><%= employee.email %></td>
	<td><%= employee.gender %></td>
	<td><%= employee.contact_no %></td>
	<td>
		<ul>
	<% employee.roles.each do |uc| %>
	<li><%= uc.name %></li>
	<% end %>
</ul>
</td>
	<td><%= link_to 'Edit',edit_employee_path(employee) %></td>
	<td><%= link_to 'Show',employee_path(employee) %></td>
<td><%= link_to 'Destroy', employee_path(employee),method: :delete %></td>
</tr>
<% end %>
</table>
<% end %>

