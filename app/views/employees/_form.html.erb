<%= form_for @employee do |f| %>

<% if @employee.errors.any? %>
      <h2>
        <%= pluralize(@employee.errors.count, "error") %>
      </h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :gender %>
	<%= f.text_field :gender %>
</p>
<p>
	<%= f.label :contact_no %>
	<%= f.text_field :contact_no %>
</p>
<p>
<%= f.label :role_ids, "Select roles" %>
 <%= f.collection_select :role_ids, Role.all, :id, :name, {}, { multiple: true } %>
    
<p>
<p>
	<%= f.submit %>
</p>
<% end %>
