<h3>Displaying all the role Detail</h3>
<%= link_to 'New_Patient', new_patient_path %>


  <%= form_tag patients_path(@patients), method: :get do %>
        <%= label_tag :search, "Search for:" %>
        <%= text_field_tag :search, params[:search]%>
        <%= submit_tag "Search" %>
     
<% if @patients.present? %>

<table border="2">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Contactno</th>
		<th>Gender</th>
		<th>roles</th>
	</tr>

	<% @patients.each do |patient| %>
	<tr>
		<td><%= patient.name %></td>
		<td><%= patient.email %></td>
		<td><%= patient.contactno %></td>
		<td><%= patient.gender %></td>
		<% patient.hospitals.each do|uc| %>
    <td><%= uc.roles %></td>
		<td><%= link_to 'Edit', edit_patient_path(patient) %></td>
		<td><%= link_to 'Show', patient_path(patient) %></td>
		<td><%= link_to 'Destroy', patient_path(patient),
                method: :delete%></td>
	</tr>
<% end %>
<% end %>
</table>
<% end %>
<% end %>






