<%= form_for @patient do |f| %>
<% if @patient.errors.any? %>
<h2>
	<%= pluralize(@patient.errors.count, 'error') %>
</h2>
<ul>
	<% @patient.errors.full_messages .each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :email %>
<%= f.text_field :email %>
</p>
<p>
<%= f.label :contactno %>
<%= f.text_field :contactno %>
</p>
<p>
<%= f.label :roles %>
<%= f.text_field :roles %>
</p>
<p>
<%= f.label :gender %>
<%= f.text_field :gender %>

</p>
<p>
<%= f.submit %>
</p>
<% end %>